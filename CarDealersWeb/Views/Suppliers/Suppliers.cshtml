@model SuppliersModel

@{
    ViewData["Title"] = "Suppliers";
}

<h2>@Model.IsImporter.ToString().ToLower() suppliers</h2>

<table class="table table-bordered table-hover glyphicon-text-color">
    <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                Supplier
            </td>
            <td>
                Number of parts
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Suppliers)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.NumberOfParts</td>
            </tr>
        }
    </tbody>


</table>

