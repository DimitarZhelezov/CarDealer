 @model IEnumerable<SaleListModel>


@{
    ViewData["Title"] = "All Sales";
}


<table class=" table table-bordered table-hover">
    <thead>
        <tr>
            <td>
                Customer
            </td>
            <td>
                Discount
            </td>
            <td>
                Price
            </td>
            <td>
                Discounted Price
            </td>
            <td>
                Details
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr class="text-center">
                <td>
                    @sale.CustomerName
                </td>
                <td>
                    @(sale.Discount + (sale.IsYoungDriver ? 0.05 : 0))%
                </td>
                <td>
                    @sale.Price.ToString("F2")
                </td>
                <td>
                    @sale.DiscountedPrice.ToString("F2")
                </td>
                <td>
                    <a class="btn btn-sm btn-default" href="/sales/@sale.Id">More Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

